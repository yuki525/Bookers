<h1>Editing Book</h1>

<div class=a>
  <% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |message| %>
    <p class=b><%= message %></p>
  <% end %>
<% end %>
</div>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>



<%= link_to "Show", "/books/#{@book.id}" %> |
<%= link_to "Back", "/books" %>


