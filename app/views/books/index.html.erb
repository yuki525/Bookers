
<p class=a><%= flash[:notice] %></p>

<h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <%= @books.each do |book| %>
    <tbody>
      <tr>
        <td>
          <span><%= book.title %></span>
        </td>
        <td>
          <span><%= book.body %></span>
        </td>
        <td>
          <%= link_to "Show", book_path(book.id) %>
        </td>
        <td>
          <%= link_to "Edit", "/books/#{book.id}/edit" %>
        </td>
        <td>
          <%= link_to "Destroy", "/books/#{book.id}", method: :delete %>
        </td>
      </tr>

    </tbody>
    <% end %>
  </table>



<h2>New book</h2>

  <%= form_with model: Book.new, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>



  <%= f.submit 'Create Book' %>

  <% end %>
